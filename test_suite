
[Line]+{
┌─┐
│↑│
│↑│
│↑│
└─┘
┌─────┐
│→ → →│
└─────┘
┌─┐
│↓│
│↓│
│↓│
└─┘
┌─────┐
│← ← ←│
└─────┘
}

[Broken Line]-{
┌─┐
│↑│
│→│
│↑│
└─┘
┌─┐
│↑│
│←│
│↑│
└─┘
┌─────┐
│→ ↓ →│
└─────┘
┌─────┐
│→ ↑ →│
└─────┘
┌─┐
│↓│
│→│
│↓│
└─┘
┌─┐
│↓│
│←│
│↓│
└─┘
┌─────┐
│← ↓ ←│
└─────┘
┌─────┐
│← ↑ ←│
└─────┘
}

[2-3 Rotations](network=networks/2x3)+ {
┌───────────────┐
│→ D → → → → D →│
│→ d D → D → d →│
│  G d l d f L →│
│  F ← ← ← g    │
└───────────────┘
┌───────┐
│    ↓ ↓│
│G f s S│
│↑ s S ↓│
│↑ k ↓ ↓│
│↑ s S ↓│
│F g ↓ ↓│
│  K s S│
│  ↓ ↓ ↓│
└───────┘
┌───────────────┐
│    G → → → f  │
│← J F a j a g  │
│← a ← A ← A a ←│
│← A ← ← ← ← A ←│
└───────────────┘
┌───────┐
│↑ ↑ ↑  │
│W w I  │
│↑ ↑ G f│
│↑ W w ↓│
│↑ ↑ i ↓│
│↑ W w ↓│
│W w F g│
│↑ ↑    │
└───────┘
}
[3-2 Rotations Layout]+ {
┌───────────────┐
│← a ← ← ← ← a ←│
│← A a ← a ← A ←│
│  H A J A t j ←│
│  T → → → h    │
└───────────────┘
┌───────┐
│    ↑ ↑│
│H t W w│
│↓ W w ↑│
│↓ I ↑ ↑│
│↓ W w ↑│
│T h ↑ ↑│
│  i W w│
│  ↑ ↑ ↑│
└───────┘
┌───────────────┐
│    H ← ← ← t  │
│→ l T D L D h  │
│→ D → d → d D →│
│→ d → → → → d →│
└───────────────┘
┌───────┐
│↓ ↓ ↓  │
│s S k  │
│↓ ↓ H t│
│↓ s S ↑│
│↓ ↓ K ↑│
│↓ s S ↑│
│s S T h│
│↓ ↓    │
└───────┘
}
[3-2 Rotations](network=networks/3x2)+ {
┌───────────────┐
│← a ← ← ← ← a ←│
│← A a ← a ← A ←│
│  H A J A t j ←│
│  T → → → h    │
└───────────────┘
┌───────┐
│    ↑ ↑│
│H t W w│
│↓ W w ↑│
│↓ I ↑ ↑│
│↓ W w ↑│
│T h ↑ ↑│
│  i W w│
│  ↑ ↑ ↑│
└───────┘
┌───────────────┐
│    H ← ← ← t  │
│→ l T D L D h  │
│→ D → d → d D →│
│→ d → → → → d →│
└───────────────┘
┌───────┐
│↓ ↓ ↓  │
│s S k  │
│↓ ↓ H t│
│↓ s S ↑│
│↓ ↓ K ↑│
│↓ s S ↑│
│s S T h│
│↓ ↓    │
└───────┘
}

[Expand Underground](rule=expand-underground) {
    [Valid]+ {
        ┌─────────┐
        │  ↓   D →│
        │l ↓ L d →│
        └─────────┘
        ┌─────────┐
        │l ↓ L D →│
        │  ↓   d →│
        └─────────┘
        ┌─────────┐
        │→ D   ↓  │
        │→ d l ↓ L│
        └─────────┘
        ┌─────────┐
        │→ D l ↓ L│
        │→ d   ↓  │
        └─────────┘
        ┌─────┐
        │l ↓ L│
        └─────┘
        ┌───────────────┐
        │→ l ↓ ↓ ↓ ↓ L →│
        └───────────────┘
    }
    [Invalid]- {
        ┌───────┐
        │→ l ↓ L│
        └───────┘
        ┌───────┐
        │l ↓ L →│
        └───────┘
        ┌─────────────┐
        │→ l ↓ ↓ ↓ L →│
        └─────────────┘
    }
}

[Mergeable Underground](rule=prevent-mergeable-underground, underground-length=8) {
    [Valid]+ {
        ┌─────┐
        │l ↓ L│
        └─────┘
        ┌───────────┐
        │l ↓ ↓ ↓ ↓ L│
        └───────────┘
        ┌─────────────────┐
        │→ l ↓ L → l ↓ L →│
        └─────────────────┘
    }
    [Invalid]- {
        ┌───────────┐
        │l ↓ L l ↓ L│
        └───────────┘
        ┌─────────────────┐
        │l ↓ L l ↓ L l ↓ L│
        └─────────────────┘
    }
}

[Semicircles](rule=prevent-semicircles) {
    [Valid]+ {
        ┌─────┐
        │f   G│
        │T D h│
        │→ d →│
        └─────┘
        ┌─────┐
        │f k G│
        │T → h│
        │  K  │
        └─────┘
        ┌─────┐
        │f I G│
        │T → h│
        │  i  │
        └─────┘
    }
    [Invalid]- {
        ┌─────┐
        │f   G│
        │T → h│
        └─────┘
        ┌─────┐
        │↓   G│
        │T → h│
        └─────┘
        ┌─────┐
        │f   ↑│
        │T → h│
        └─────┘
        ┌─────┐
        │↓   ↑│
        │T → h│
        └─────┘
        ┌─────┐
        │G → f│
        │h   T│
        └─────┘
    }
}